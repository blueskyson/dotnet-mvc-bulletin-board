@model BulletinBoard.Models.User
@{
    ViewData["Title"] = "Change DisplayName";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-xs-12 col-sm-8 col-md-6 col-lg-4">
            <form asp-controller="Login" asp-action="Index">
                <h2>Enter new display name: </h2>
                <input asp-for="DisplayName" class="form-control my-2" />
                <span asp-validation-for="DisplayName" class="text-danger"></span>
                @if ((string)ViewData["DisplayNameStatus"]! != "") {
                    <span class="text-danger">@ViewData["DisplayNameStatus"]</span>
                }
                <div class="form-group my-2">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>