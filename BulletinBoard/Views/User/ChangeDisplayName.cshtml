@using BulletinBoard.Utils
@model BulletinBoard.Models.Entities.User
@{
    ViewData["Title"] = "Change DisplayName";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-xs-12 col-sm-8 col-md-6 col-lg-4">
            <form asp-controller="User" asp-action="ChangeDisplayName">
                <h2>Enter new display name: </h2>
                <input type="text" name="DisplayName" class="form-control my-2" />
                <span asp-validation-for="DisplayName" class="text-danger"></span>
                @if (ViewData[ViewDataKeys.DisplayName] != null)
                {
                    <span class="text-danger">@ViewData[ViewDataKeys.DisplayName]</span>
                }
                <div class="form-group my-2">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>